 <tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= truncate(post.rationale, length: 80) %>
  </td>
  <td>
    <%= link_to "Edit", edit_post_path(post), id: "edit_#{post.id}"  %>
  </td>
  <td>
    <%= link_to "Delete", post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", data: {confirm: "Delete this post?"}  %>
  </td>
</tr>
